{
    "name": "decodelabs/glitch",
    "description": "Better tools for when things go wrong",
    "type": "library",
    "keywords": ["dump", "dumper", "exception", "debug"],
    "license": "MIT",
    "authors": [{
        "name": "Tom Wright",
        "email": "tom@inflatablecookie.com"
    }],
    "require": {
        "php": "^7.2|^8.0",
        "symfony/polyfill-mbstring": "^1.7",

        "decodelabs/veneer": "^0.7",
        "decodelabs/glitch-support": "^0.3",
        "decodelabs/exceptional": "^0.3",
        "decodelabs/enlighten": "^0.8",

        "psr/log": "^1.0",
        "components/jquery": "~3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "phpstan/phpstan": "^0.12.45",
        "phpstan/extension-installer": "^1.0",
        "decodelabs/phpstan-decodelabs": "^0.4",
        "symplify/easy-coding-standard": "^8.3",

        "symfony/var-dumper": "^5.1",
        "php-ds/php-ds": "~1.2"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Glitch\\": "src/Glitch"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.17.x-dev"
        }
    },
    "scripts": {
        "analyze": "phpstan analyze --no-progress",
        "psr12": "ecs check --no-progress-bar",
        "psr12-fix": "ecs check --no-progress-bar --fix"
    }
}
