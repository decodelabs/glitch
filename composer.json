{
    "name": "decodelabs/glitch",
    "description": "Better tools for when things go wrong",
    "type": "library",
    "keywords": [ "dump", "dumper", "exception", "debug" ],
    "license": "MIT",
    "authors": [ {
            "name": "Tom Wright",
            "email": "tom@inflatablecookie.com"
        } ],
    "require": {
        "php": "^8.4",
        "symfony/polyfill-mbstring": "^1.31",
        "symfony/polyfill-php82": "^1.31",

        "decodelabs/coercion": "^0.2.15",
        "decodelabs/enlighten": "^0.9.2",
        "decodelabs/exceptional": "^0.5.2",
        "decodelabs/glitch-support": "^0.5.1",
        "decodelabs/veneer": "^0.12.2",

        "psr/log": "^3.0.2"
    },
    "require-dev": {
        "decodelabs/phpstan-decodelabs": "^0.7",

        "symfony/var-dumper": "^5|^6|^7",
        "php-ds/php-ds": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Glitch\\": "src/Glitch"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.19.x-dev"
        }
    },
    "repositories": {
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
